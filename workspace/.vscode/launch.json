{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug bin/run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "DISPLAY": ":1",
                "PLAYWRIGHT_BROWSERS_PATH": "/ms-playwright"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "justMyCode": true,
            "args": [
                "--workflow-id",
                "0a70f115-c3af-4339-af33-946ac143bbf6"
            ]
        }
    ]
}
